{
  "name": "flaky-test-demo",
  "version": "1.0.0",
  "description": "Demo project to showcase TeamCity's intelligent flaky test detection, Jenkins' manual approach, and CircleCI Chunk's automated remediation",
  "scripts": {
    "test": "jest --runInBand --reporters=default --reporters=jest-teamcity --forceExit",
    "test:ci": "jest --ci --coverage --forceExit",
    "test:junit": "jest --ci --reporters=default --reporters=jest-junit --forceExit",
    "test:teamcity": "jest --runInBand --reporters=default --reporters=jest-teamcity --forceExit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "axios": "^1.4.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-teamcity": "^1.12.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
